<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_book_copy_form" model="ir.ui.view">
        <field name="name">view.library.book.copy.form</field>
        <field name="model">library.book.copy</field>
        <field name="arch" type="xml">
            <form string="Libros">
                <sheet>
                    <group>
                        <group>
                            <field name="book_id" required="true"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="authors"/>
                            <field name="editors"/>
                            <field name="publisher"/>
                        </group>
                        <group>
                            <field name="edition_year"/>
                            <field name="isbn"/>
                            <field name="genre"/>
                            <field name="internal_reference" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nota">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_library_book_copy_tree" model="ir.ui.view">
        <field name="name">view.library.book.copy.tree</field>
        <field name="model">library.book.copy</field>
        <field name="arch" type="xml">
            <tree string="Libros">
                <field name="name"/>
                <field name="authors"/>
                <field name="editors"/>
                <field name="publisher"/>
                <field name="edition_year"/>
                <field name="isbn"/>
                <field name="genre"/>
                <field name="internal_reference"/>
            </tree>
        </field>
    </record>

    <record id="view_library_book_copy_search" model="ir.ui.view">
        <field name="name">view.library.book.copy.search</field>
        <field name="model">library.book.copy</field>
        <field name="arch" type="xml">
            <search string="Libros">
                <field name="name"/>
                <field name="authors"/>
                <field name="isbn"/>
                <field name="internal_reference"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>