<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_rental_form" model="ir.ui.view">
        <field name="name">view.library.rental.form</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <form string="Renta de libros">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" required="true"
                                   options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                        </group>
                        <group>
                            <field name="date" required="true"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rentas">
                            <field name="book_ids">
                                <tree editable="bottom">
                                    <field name="book_copy_id" required="true"
                                           options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                    <field name="returned" widget="boolean_toggle"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="book_copy_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                        </group>
                                        <group>
                                            <field name="returned" widget="boolean_toggle"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_library_rental_tree" model="ir.ui.view">
        <field name="name">view.library.rental.tree</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <tree string="Rentas">
                <field name="partner_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_library_rental_search" model="ir.ui.view">
        <field name="name">view.library.rental.search</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <search string="Rentas">
                <field name="partner_id"/>
                <field name="date"/>
            </search>
        </field>
    </record>

</odoo>