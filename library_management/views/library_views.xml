<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">view.library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Libros">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="authors"/>
                            <field name="editors"/>
                            <field name="publisher"/>
                        </group>
                        <group>
                            <field name="edition_year"/>
                            <field name="isbn"/>
                            <field name="genre"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nota">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">view.library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Libros">
                <field name="name"/>
                <field name="authors"/>
                <field name="editors"/>
                <field name="publisher"/>
                <field name="edition_year"/>
                <field name="isbn"/>
                <field name="genre"/>
            </tree>
        </field>
    </record>

    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">view.library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Libros">
                <field name="name"/>
                <field name="authors"/>
                <field name="isbn"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>